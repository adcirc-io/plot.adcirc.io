<div class="node-picker row vertical-align">
    <div class="title col-sm-3">
        Node:
    </div>
    <div class="controller col-sm-6">
        <input id="{{ id }}" class="form-control input-sm" type="number" min="1" max="{{ max_nodes }}" value="1">
    </div>
    <div class="extras col-sm-3">
        <i class="fa fa-cog clickable clickable-primary"></i>
        <i class="fa fa-times clickable clickable-primary"></i>
    </div>
</div>